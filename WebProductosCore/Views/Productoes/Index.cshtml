@model IEnumerable<WebProductosCore.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom_Producto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cantidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_elaboracion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_caducidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CodCategoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cod_Proovedor)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom_Producto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cantidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_elaboracion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fecha_caducidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodCategoria)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cod_Proovedor)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Cod_Producto">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Cod_Producto">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Cod_Producto">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
